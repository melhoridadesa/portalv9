    <script>

      $( document ).ready(function() {

        $( "#btnAtualiza" ).click(function() {
            
            var vTitulo = $('#titulo').val();
            var vTexto = $('#texto').val();

            $.ajax({
              method: "POST",
              url: "http://api.melhoridade.com.br:4000/ins_quemsomos",
              data: { titulo: vTitulo, texto: vTexto }
            }).done(function( data ) {
                alert('Quem somos atualizado com sucesso!');

            });

        });
        
      });

</script>    


